<Window x:Class="DirectoryCopier.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DirectoryCopier"
        xmlns:vm="clr-namespace:DirectoryCopier.Models"
        xmlns:p="clr-namspace:Icon"
        mc:Ignorable="d"
        Title="ICopier"  FontSize="14" FontWeight="Medium"  Height="180" Width="270"  WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <vm:DirectoryCopierViewModel></vm:DirectoryCopierViewModel>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
           
        </Grid.ColumnDefinitions>
        <StackPanel>
          


            <TextBlock Height="65" Margin="5,10">“Everything should be made<LineBreak/> as 
                simple as possible, but not simpler.”<LineBreak/>

      - Albert Einstein.</TextBlock>
            <Button   Command="{Binding ChooseFolder}" Margin="5,20" >Copy</Button>
           
        </StackPanel>
    </Grid>
</Window>
